@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="/ftc_logo.png" />

</head>
<div class="signup">
    <div class="whitebox">
        <div class="d-flex justify-content-center mt-5 row">
            <div class="col"><hr class="border border-secondary border-5 opacity-75" /></div>
            <img src="/ftc_logo.png"
                 class="w-50 mx-auto col" />
            <div class="col"><hr class="border border-secondary border-5 opacity-75" /></div>
        </div>
        <h4 class="text-center mt-3">Sign Up</h4>
        <div class="innercontent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form-container">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" autocomplete="firstname" aria-required="true" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" autocomplete="firstname" aria-required="true" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Mobile No" autocomplete="mobileno" aria-required="true" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex row mb-3">
                        <button id="registerSubmit" style="background-color: #04233b;" class="btn text-light w-50 mx-auto">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

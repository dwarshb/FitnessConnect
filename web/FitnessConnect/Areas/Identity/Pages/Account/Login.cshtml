@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<head>
    <link href="/css/site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="/ftc_logo.png" />

</head>
<div class="signup">
    <div class="whitebox">
          <div class="d-flex justify-content-center mt-5 row">
            <div class="col"><hr class="border border-secondary border-5 opacity-75" /></div>
            <img src="/ftc_logo.png"
                 class="w-50 mx-auto col" />
            <div class="col"><hr class="border border-secondary border-5 opacity-75" /></div>
        </div>
        <h4 class="text-center mt-3">Login</h4>
        <div class="innercontent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="form" id="account" method="post">
                <div class="form-container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group LoginPage">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="checkbox d-flex justify-content-center">
                        <label asp-for="Input.RememberMe" class="form-label ps-0 pb-2">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex row mb-3">
                        <button id="login-submit" type="submit" style="background-color: #04233b;" class="btn text-light w-50 mx-auto">Log in</button>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="/identity/account/forgotPassword">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <p>Are You a new User? <br> <a href="/identity/account/register">Register here</a></p>
                    </div>
                    <div class="g-signin2" data-onsuccess="onSignIn"></div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function onSignIn(googleUser) {
          var profile = googleUser.getBasicProfile();
          console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
          console.log('Name: ' + profile.getName());
          console.log('Image URL: ' + profile.getImageUrl());
          console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
        }
    </script>
}

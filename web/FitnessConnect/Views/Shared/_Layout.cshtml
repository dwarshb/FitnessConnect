@using FitnessConnect.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="google-signin-client_id" content="59741405918-6nbbn54sc0900boe5aicuq29s78q0cd2.apps.googleusercontent.com">
    <title>@ViewData["Title"] - FitnessConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessConnect.styles.css" asp-append-version="true" />
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/bootstrap_Icons_1.10.3/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" rel="stylesheet" />
    <link href="~/assets/css/style-conquer.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style-responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/themes/default.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/assets/css/custom.css" rel="stylesheet" type="text/css" />
    <style>
        .btn-success {
            background: #69a716;
            border-color: #69a716;
        }

            .btn-success:focus,
            .btn-success:hover {
                background: #4c7a10;
                border-color: #4c7a10;
            }

        .page-sidebar-wrapper {
            margin-top: 4.5rem;
        }

        .btn-outline-success {
            border-color: #69a716;
        }

            .btn-outline-success:focus,
            .btn-outline-success:hover {
                border-color: #4c7a10;
            }

        .margin62 {
            margin-left: 62rem
        }

        .form-check-input {
            border-width: 2px;
            border-color: #a3aab1;
        }

            .form-check-input:checked {
                background-color: #69a716;
                border-color: #69a716;
            }

        .switch {
            display: inline-block;
            height: 48px;
            position: relative;
            width: 60px;
        }

            .switch input {
                display: none;
            }

        .slider {
            background-color: #ccc;
            bottom: 0;
            cursor: pointer;
            left: 0;
            position: absolute;
            right: 0;
            top: 0;
            transition: .4s;
        }

            .slider:before {
                background-color: #fff;
                bottom: 4px;
                content: "";
                height: 16px;
                left: 4px;
                position: absolute;
                transition: .4s;
                width: 16px;
            }

        input:checked + .slider {
            background-color: #69a716;
        }

            input:checked + .slider:before {
                transform: translateX(26px);
            }

        .slider.round {
            border-radius: 34px;
        }

            .slider.round:before {
                border-radius: 50%;
            }

        label.error {
            color: #DC3545;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f5f5f5;
            padding: 10px 0;
            border-top: 2px solid #6c757d;
        }

        .footer-inner {
            text-align: center;
        }

        .avatarlogo {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: #CD5C5C;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 15px;
            font-weight: bold;
            color: white;
            border: none;
        }

        ul.page-sidebar-menu li > ul.sub-menu > li > a:hover {
            background-color: #69a716 !important;
            border-color: #69a716 !important;
            border-radius: 5px;
            color: white !important;
        }

        .sub-menu li a:hover .title {
            color: white !important;
        }
    </style>
</head>
<body>
    <!-- BEGIN HEADER -->

    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="header-inner">
            <!-- BEGIN LOGO -->
            <a class="navbar-brand me-1" asp-action="Index" asp-controller="Home" style="background-color: #e9ecef;">
                <img src="~/ftc_logo.png" alt="logo" class="img-responsive" />
            </a>
            <a href="javascript:void(0)" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </a>
            <div id="nav-items-navbar">
                <div class="row margin62">
                    <div class="col-auto" role="search">
                        <div class="input-group">
                            <input class="form-control border-dark" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-success" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <ul class="navbar-nav1 pull-right">
                    <li class="dropdown user">
                        @if (@user?.ProfileImg != null)
                        {
                            <button class="proImgNav border-0 mt-1" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                    style="background-image: url('/ProfileImg/@user?.ProfileImg');width:35px; height:35px;"></button>
                        }
                        else
                        {
                            <button class="proImgNav avatarlogo" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @user?.FirstName[0]@user?.LastName[0]
                            </button>
                        }
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Profile"><i class="bi bi-person-circle"></i>  My Profile</a>
                            </li>
                            <li>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-key-fill"></i>  Log Out</a>
                            </li>
                        </ul>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                </ul>
            </div>
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>

    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <div class="page-sidebar navbar-collapse">
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu">
                    <li class="sidebar-toggler-wrapper">
                        <div class="sidebar-toggler"></div>
                        <div class="clearfix"></div>
                    </li>
                    <li id="nav-items-sidebar">
                        <div class="" role="search">
                            <div class="input-group">
                                <input class="form-control border-dark" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-success" type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col-auto dropdown user">

                                @if (@user?.ProfileImg != null)
                                {
                                    <button class="proImgNav" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                            style="background-image: url('/ProfileImg/@user?.ProfileImg');width:45px; height:45px;margin-right:15%"></button>
                                }
                                else
                                {
                                    <button class="proImgNav avatarlogo" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @user?.FirstName[0]@user?.LastName[0]
                                    </button>
                                }
                                <ul class="dropdown-menu w-auto">
                                    <li>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Profile"><i class="bi bi-person-circle"></i> My Profile</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Announcement"><i class="bi bi-megaphone-fill"></i>  Announcement</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-key-fill"></i> Log Out</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    <li class="" id="sidenav-dashboard">
                        <a class="fw-bold" asp-action="Index" asp-controller="Home">
                            <i class="bi bi-speedometer2 text-dark"></i><span class="title"> Dashboard</span>
                        </a>
                    </li>
                    <li class="" id="sidenav-task1">
                        <a class="fw-bold sub-btn" style="cursor: pointer;" asp-action="Index" asp-controller="Chat">
                            <i class="bi bi-menu-button-wide-fill text-dark"></i>
                            <span class="title">
                                Chats
                            </span>
                        </a>
                    </li>
                    <li class="" id="sidenav-service">
                        <a class="fw-bold" asp-action="Index" asp-controller="RolesAndPermissions">
                            <i class="bi bi-gear-fill text-dark"></i><span class="title">Manage Permissions</span>
                        </a>
                    </li>
                    <li class="" id="sidenav-service">
                        <a class="fw-bold" asp-action="ContactUs" asp-controller="Home">
                            <i class="bi bi-tools text-dark"></i><span class="title">Contact Us</span>
                        </a>
                    </li>
                    <li class="" id="sidenav-office">
                        <a class="fw-bold" asp-controller="Home" asp-action="AboutUs">
                            <i class="bi bi-building text-dark"></i><span class="title">About Us</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="footer-inner">
            Copyright © 2023
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    @*<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.3/xlsx.full.min.js"></script>
    <script src="~/assets/scripts/app.js" type="text/javascript"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
